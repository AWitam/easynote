<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notes.AddNote">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            android:id="@+id/icon_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/baseline_more_horiz_24"
            android:id="@+id/icon_more"
            android:layout_weight="1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notes_title"
            app:layout_constraintTop_toBottomOf="@+id/icon_back"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:hint="@string/notes_title" android:textSize="24sp" tools:layout_editor_absoluteX="10dp"
            android:textStyle="bold"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notes_description"
            app:layout_constraintTop_toBottomOf="@+id/notes_title"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:hint="@string/notes_description"
            android:lines="24"
            android:gravity="start" tools:layout_editor_absoluteX="10dp"/>

    <LinearLayout
            android:id="@+id/bottom_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/notes_description"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="1.0">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="20dp"
                app:srcCompat="@drawable/baseline_done_24"
                android:id="@+id/icon_save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="20dp"
                app:srcCompat="@drawable/baseline_delete_24"
                android:id="@+id/icon_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
